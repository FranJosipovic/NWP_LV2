            <li><a href="/grafikon">Grafikon</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <h1>Galerija slika</h1>
    <section class="galerija">
      <% images.forEach((image, i) => { %>
      <figure class="galerija_slika" id="image<%= i+1 %>">
        <a href="#img<%= i+1 %>">
          <img
            src="<%= image.url %>"
            alt="Slika <%= i + 1 %>"
            style="height: 150px; width: 200px; object-fit: fill"
          />
        </a>
        <figcaption>Slika <%= i + 1 %></figcaption>
      </figure>
      <% }) %> <% images.forEach((image, i)=> { %>
      <div class="lightbox" id="img<%= i+1 %>">
        <a href="#" class="close">Ã—</a>
        <img src="<%= image.url %>" alt="Slika <%= i+1 %>" />
      </div>
      <% }) %>
    </section>
  </body>
</html>
